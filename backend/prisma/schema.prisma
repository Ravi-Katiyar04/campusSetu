generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  profile   Profile?
  progress  Progress?
  createdAt DateTime @default(now())
}

model Profile {
  id      String   @id @default(uuid())
  name    String
  college String
  year    Int
  skills  String[]
  userId  String   @unique
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Progress {
  id     String @id @default(uuid())
  level  Int
  xp     Int
  streak Int
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Company {
  id        String @id @default(uuid())
  name      String
  package   String
  year      Int
  role      String
  questions String
}