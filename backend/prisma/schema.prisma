generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  profile   Profile?
  progress  Progress?
  createdAt DateTime @default(now())
}

model Profile {
  id      String   @id @default(uuid())
  name    String
  college String
  year    Int
  skills  String[]
  userId  String   @unique
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Progress {
  id           String   @id @default(uuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id])

  level        Int      @default(1)
  xp           Int      @default(0)
  streak       Int      @default(0)
  lastActiveAt DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}


model Company {
  id            String   @id @default(uuid())
  name          String
  role          String
  packageLPA    Float
  year          Int
  location      String?
  eligibility   String?
  description   String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model StudentRegistry {
  id         Int     @id @default(autoincrement())
  rollNumber String  @unique
  email      String  @unique
  name       String
}